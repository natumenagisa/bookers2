<%= form_with model:book do |f| %>
  <h2 class="mt-3">New book</h2>

  <div class="form-group">
    <%= f.label :Title %><br/>
    <%= f.text_field :title, class: 'form-control book_title' %>
  </div>

  <div class="form-group">
    <%= f.label :Opinion %><br/>
    <%= f.text_field :body, class: 'form-control book_body' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
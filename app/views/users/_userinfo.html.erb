<h2>User info</h2>
<tr></tr>
<table class="table">
  <tbody>
    <tr>
      <%= link_to user_path(user.id) do %>
      <%= image_tag user.get_image, size: "100x100" %>
      <% end %>
    </tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>

    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
</div>